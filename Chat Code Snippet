<script type='text/javascript'>
	(function() {
		var popupTitleText = 'Chat with our bot';
		var popupBody = '';
		switch(window.location.pathname){
			case "/best-job-ever/":
				popupBody = "Not seeing the position you were looking for? Feel free to let me know what type of position you're interested in!";
				break;
			case "/diversity-inclusion/":
				popupBody = "We love D+I";
				break;
			default:
				popupBody = "Our bot is here to help get you answers";
				break;
		}
		document.getElementById('snapins_titletext').innerHTML = popupTitleText;
		document.getElementById('snapins_bodytext').innerHTML = popupBody;
		document.getElementById('closeInvite').onclick = function() { embedded_svc.inviteAPI.inviteButton.rejectInvite(); };
		document.getElementById('rejectInvite').onclick = function() { embedded_svc.inviteAPI.inviteButton.rejectInvite(); }; // use this API call to reject invitations
		document.getElementById('acceptInvite').onclick = function() { embedded_svc.inviteAPI.inviteButton.acceptInvite(); }; // use this API call to start chat from invitations
		document.addEventListener('keyup', function(event) { if (event.keyCode == 27) { embedded_svc.inviteAPI.inviteButton.rejectInvite(); }})
	})();
</script>
<!-- End of Invitations -->

<script type='text/javascript' src='https://service.force.com/embeddedservice/5.0/esw.min.js'></script>
<script type='text/javascript'>
	var initESW = function(gslbBaseURL) {
		embedded_svc.settings.displayHelpButton = true; //Or false
		embedded_svc.settings.language = ''; //For example, enter 'en' or 'en-US'
		embedded_svc.settings.chatbotAvatarImgURL = 'https://cloud4good.com/wp-content/uploads/2020/09/Chatbot-Robot-Avatar-40x40-1.jpg';


		embedded_svc.settings.defaultMinimizedText = 'Chat with our bot'; //(Defaults to Chat with an Expert)
		embedded_svc.settings.disabledMinimizedText = 'Bot Offline'; //(Defaults to Agent Offline)

		//embedded_svc.settings.loadingText = ''; //(Defaults to Loading)
		//embedded_svc.settings.storageDomain = 'cloud4good.com'; //(Sets the domain for your deployment so that visitors can navigate subdomains during a chat session)

		// Settings for Chat
		//embedded_svc.settings.directToButtonRouting = function(prechatFormData) {
			// Dynamically changes the button ID based on what the visitor enters in the pre-chat form.
			// Returns a valid button ID.
		//};
		//embedded_svc.settings.prepopulatedPrechatFields = {}; //Sets the auto-population of pre-chat form fields
		//embedded_svc.settings.fallbackRouting = []; //An array of button IDs, user IDs, or userId_buttonId
		//embedded_svc.settings.offlineSupportMinimizedText = '...'; //(Defaults to Contact Us)

		embedded_svc.settings.enabledFeatures = ['LiveAgent'];
		embedded_svc.settings.entryFeature = 'LiveAgent';
		//capture pre-chat form fields to Chat Transcript object
		embedded_svc.settings.extraPrechatFormDetails = [{
		//  "label":"First Name",  
		//  "transcriptFields": ["cfg_First_Name__c"]
		//},{
		//  "label":"Last Name", 
		//  "transcriptFields": ["cfg_Last_Name__c"]
		//},{
		//  "label":"Email", 
		//  "transcriptFields": ["cfg_Email__c"]
		//},{
		//  "label":"Phone", 
		//  "transcriptFields": ["cfg_Phone__c"]
		//},{
		  "label":"InvitePage",
		  "value":window.location.pathname,
		  "displayToAgent": true,
		  "transcriptFields": ["cfg_Invitation_Page__c"]
		}];
		embedded_svc.init(
			'https://cloud4good--partial.my.salesforce.com',
			'https://partial-cloud4good.cs28.force.com',
			gslbBaseURL,
			'00D230000000mSF',
			'Chatbot_Deployment',
			{
				baseLiveAgentContentURL: 'https://c.la1-c1cs-ph2.salesforceliveagent.com/content',
				deploymentId: '57223000000008f',
				buttonId: '5732300000000I1',
				baseLiveAgentURL: 'https://d.la1-c1cs-ph2.salesforceliveagent.com/chat',
				eswLiveAgentDevName: 'Chatbot_Team',
				isOfflineSupportEnabled: false
			}
		);
	};

	if (!window.embedded_svc) {
		var s = document.createElement('script');
		s.setAttribute('src', 'https://cloud4good--partial.my.salesforce.com/embeddedservice/5.0/esw.min.js');
		s.onload = function() {
			initESW(null);
		};
		document.body.appendChild(s);
	} else {
		initESW('https://service.force.com');
	}
</script>
